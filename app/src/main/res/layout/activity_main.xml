<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Add"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="5dp"
        android:text="Add"
        app:layout_constraintEnd_toStartOf="@+id/Sub"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numInput2" />

    <Button
        android:id="@+id/Sub"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="5dp"
        android:text="Sub"
        app:layout_constraintEnd_toStartOf="@+id/Mult"
        app:layout_constraintStart_toEndOf="@+id/Add"
        app:layout_constraintTop_toBottomOf="@+id/numOutput" />

    <Button
        android:id="@+id/Mult"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="329dp"
        android:layout_marginEnd="5dp"
        android:text="Mult"
        app:layout_constraintEnd_toStartOf="@+id/Div"
        app:layout_constraintStart_toEndOf="@+id/Sub"
        app:layout_constraintTop_toBottomOf="@+id/numOutput" />

    <Button
        android:id="@+id/Div"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="10dp"
        android:text="Div"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Mult"
        app:layout_constraintTop_toBottomOf="@+id/numInput2" />

    <EditText
        android:id="@+id/numInput1"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="11dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Número"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numInput2"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="11dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Número"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numInput1" />

    <TextView
        android:id="@+id/numOutput"
        android:layout_width="195dp"
        android:layout_height="60dp"
        android:layout_marginTop="111dp"
        android:hint="Resultado"
        app:layout_constraintTop_toBottomOf="@+id/numInput2"
        tools:layout_editor_absoluteX="108dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>